server {
    listen 80;
    server_name localhost;

    location /static/ {
        alias /path/to/static/files;    
}

    location / {
        proxy_pass http://localhost:8000; # Проксирование запросов к Django
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}
